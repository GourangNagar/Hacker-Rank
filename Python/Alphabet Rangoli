def print_rangoli(n):
    list1=list(map(chr , range(97,123)))
    x=list1[n-1::-1]+list1[1:n]
    m=4*n-3
    for i in range(1,n):
        print('-'.join(list1[n-1:n-i:-1]+list1[n-i:n]).center(m,'-'))
    for i in range(n,0,-1):
        print('-'.join(list1[n-1:n-i:-1]+list1[n-i:n]).center(m,'-'))

if __name__ == '__main__':
    n = int(input())
    print_rangoli(n)
